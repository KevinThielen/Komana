<%- if controller_name != 'sessions' %>
<div class="input-group">
  <%= link_to "Anmelden", new_session_path(resource_name), :class => "btn btn-default" %>
</div>
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
<div class="input-group">
  <%= link_to "Registrieren", new_registration_path(resource_name), :class => "btn btn-default" %>
  </div>
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
<div class="input-group">
  <%= link_to "Passwort vergessen?", new_password_path(resource_name), :class => "btn btn-default" %></div>
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Keine E-Mail zur BestÃ¤tigung erhalten?", new_confirmation_path(resource_name), :class => "btn btn-default" %><br />
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Keine E-Mail zur Freischaltung erhalten?", new_unlock_path(resource_name), :class => "btn btn-default" %><br />
<% end -%>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to "Mit #{provider.to_s.titleize} anmelden", omniauth_authorize_path(resource_name, provider), :class => "btn btn-default" %><br />
  <% end -%>
<% end -%>
