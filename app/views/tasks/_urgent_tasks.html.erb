
<div id="page-wrapper">
  <div class="row">
    <div class="col-lg-12">
      <h1>Dringende Aufgaben <small>Übersicht</small></h1>
      <ol class="breadcrumb">
        <li><%= link_to '<i class="fa fa-dashboard"></i> Dashboard'.html_safe , root_path %></li>
        <li class="active"><i class="fa fa-edit"></i> Dringende Aufgaben</li>
      </ol>
    </div>
  </div>
 
<div class="table-responsive"> 
    <table class="table table-hover"> 
      <% @tasks = Task.where("priority == ?", "high").joins(:users).where("user_id == ?", current_user.id) %>
      <tr>
        <th>Aufgabe</th>
        <th>Frist</th>
        <th>Projekt</th>
        <th>Priorität</th>
      </tr>
      <% @tasks.each do |task| %>
      <tr>
        <td><a><%= link_to task.titel, project_path(task.list.project) %></a></td>
        <td>[distance_of_time_in_words]</td>
        <td><%= task.list.project.name %></td>
        <td><%= task.priority %></td>
      </tr>
     <% end %>
    </table>
  </div>
</div>