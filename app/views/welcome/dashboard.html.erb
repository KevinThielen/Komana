<div id="page-wrapper">
        <div class="row">
          <div class="col-lg-12">
            <h1>Dashboard <small><%= current_user.firstname %> <%= current_user.lastname %></small></h1>
            <ol class="breadcrumb">
              <li class="active"><i class="fa fa-dashboard"></i> Dashboard</li>
            </ol>
          </div>
        </div><!-- /.row -->

        <div class="row">
          <div class="col-lg-3">
            <div class="panel panel-info">
              <div class="panel-heading">
                <div class="row">
                  <div class="col-xs-6">
                    <i class="fa fa-clipboard fa-5x"></i>
                  </div>
                  <div class="col-xs-6 text-right">
                    <p class="announcement-heading"><%= Project.joins(:users).where("user_id = ?", current_user.id).count %></p>
                    <p class="announcement-text">Aktuelle Projekte</p>
                  </div>
                </div>
              </div>
              <%= link_to (projects_path) do%>
                <div class="panel-footer announcement-bottom">
                  <div class="row">
                    <div class="col-xs-6">
                      Projekte<br> anzeigen
                    </div>
                    <div class="col-xs-6 text-right">
                      <i class="fa fa-arrow-circle-right"></i>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
          <div class="col-lg-3">
            <div class="panel panel-warning">
              <div class="panel-heading">
                <div class="row">
                  <div class="col-xs-6">
                    <i class="fa fa-edit fa-5x"></i>
                  </div>
                  <div class="col-xs-6 text-right">
                    <p class="announcement-heading"><%= Task.joins(:users).where("user_id = ?", current_user.id).count %></p>
                    <p class="announcement-text">Aufgaben warten</p>
                  </div>
                </div>
              </div>
			         <%= link_to task_search_path(0), :method => :post do%>
                <div class="panel-footer announcement-bottom">
                  <div class="row">
                    <div class="col-xs-6">
                    Aufgaben<br>Anzeigen
                    </div>
                    <div class="col-xs-6 text-right">
                      <i class="fa fa-arrow-circle-right"></i>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
          <div class="col-lg-3">
            <div class="panel panel-danger">
              <div class="panel-heading">
                <div class="row">
                  <div class="col-xs-6">
                    <i class="fa fa-exclamation fa-5x"></i>
                  </div>
                  <div class="col-xs-6 text-right">
                    <p class="announcement-heading">
                    <% @count_urgent = 0 %> 
                    <% @tasks = Task.where("priority = ?", "high") %>
                    <% @tasks.each do |task| %>
                      <% @project_user = ProjectsUsers.where("project_id = ?", task.list.project.id).where("user_id = ?", current_user.id).first %>
                      <% if @project_user %>
                        <% if current_user.id == @project_user.user_id %>
                         <% @count_urgent = @count_urgent + 1 %>
                        <% end %>
                      <% end %>
                    <% end %>
                    <%= @count_urgent %></p>
                    <p class="announcement-text">Dringende Aufgaben</p>
                  </div>
                </div>
              </div>
              <%= link_to task_search_path(0, :partial => 'tasks/urgent_tasks'), :method => :post do%>
                <div class="panel-footer announcement-bottom">
                  <div class="row">
                    <div class="col-xs-6">
                      Aufgaben anzeigen
                    </div>
                    <div class="col-xs-6 text-right">
                      <i class="fa fa-arrow-circle-right"></i>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
          <div class="col-lg-3">
            <div class="panel panel-success">
              <div class="panel-heading">
                <div class="row">
                  <div class="col-xs-6">
                    <i class="fa fa-tasks fa-5x"></i>
                  </div>
                  <div class="col-xs-6 text-right">
                  <p class="announcement-heading">
                  <% @count_free = 0 %>
                  <% @tasks = Task.includes(:users).where("users.id is NULL") %>
                  <% @tasks.each do |task| %>
                    <% @project_user = ProjectsUsers.where("project_id = ?", task.list.project.id).where("user_id = ?", current_user.id).first %>
                      <% if @project_user %>
                        <% if current_user.id == @project_user.user_id %>
                         <% @count_free = @count_free + 1 %>
                        <% end %>
                      <% end %>
                  <% end %>
                  <%= @count_free %></p>
                  <p class="announcement-text">Freie Aufgaben</p>
                  </div>
                </div>
              </div>
                <%= link_to task_search_path(0, :partial => 'tasks/free_tasks'), :method => :post do %>
                <div class="panel-footer announcement-bottom">
                  <div class="row">
                    <div class="col-xs-6">
                    Aufgaben Anzeigen
                    </div>
                    <div class="col-xs-6 text-right">
                      <i class="fa fa-arrow-circle-right"></i>
                    </div>
                  </div>
                </div>
             <% end %>
            </div>
          </div>
        </div><!-- /.row -->

      </div><!-- /#page-wrapper -->

    </div><!-- /#wrapper -->
    
